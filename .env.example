# Barbaarintasan Academy - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED - Core Application
# ============================================
NODE_ENV=production
PORT=8080
SESSION_SECRET=your-session-secret-here

# Database (Neon PostgreSQL)
DATABASE_URL=postgres://user:password@host/database

# ============================================
# STAGING MODE (Fly.io)
# ============================================
# Set to 'true' to disable cron jobs and AI content generation
STAGING=true

# ============================================
# AI Services (Replit AI Integrations)
# ============================================
# These are used for OpenAI API calls in production
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# Fallback OpenAI keys (used if AI_INTEGRATIONS_* not set)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_PROJECT_ID=proj-your-project-id

# Google Gemini (optional)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# Google Veo (for AI video generation)
GOOGLE_VEO_API_KEY=your-veo-api-key

# ============================================
# Text-to-Speech (Azure)
# ============================================
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# ============================================
# Google Services
# ============================================
# Google TTS (optional)
GOOGLE_TTS_API_KEY=your-google-tts-key

# Google Drive (for audio/recording storage)
GOOGLE_DRIVE_CLIENT_ID=your-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token

# Google Calendar (optional)
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# ============================================
# Voice Rooms (LiveKit)
# ============================================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# ============================================
# Payments
# ============================================

# ============================================
# Notifications
# ============================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_GROUP_CHAT_ID=-1001234567890

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com

# Web Push (VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@example.com

# ============================================
# Security & Authentication
# ============================================
# Daily cron job secret
DAILY_CRON_SECRET=your-cron-secret

# CAMB AI (optional)
CAMB_AI_API_KEY=your-camb-ai-key

# ElevenLabs (optional)
ELEVENLABS_API_KEY=your-elevenlabs-key

# Metered TURN server (optional)
METERED_DOMAIN=your-metered-domain
METERED_SECRET_KEY=your-metered-secret

# Cloudflare (optional)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_TURN_KEY_ID=your-turn-key-id
