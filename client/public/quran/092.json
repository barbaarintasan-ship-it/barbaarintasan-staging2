{
  "number": 92,
  "name": "سُورَةُ اللَّيۡلِ",
  "englishName": "Al-Lail",
  "englishNameTranslation": "The Night",
  "revelationType": "Meccan",
  "numberOfAyahs": 21,
  "ayahs": [
    {
      "number": 1,
      "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَٱلَّیۡلِ إِذَا یَغۡشَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 2,
      "text": "وَٱلنَّهَارِ إِذَا تَجَلَّىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 3,
      "text": "وَمَا خَلَقَ ٱلذَّكَرَ وَٱلۡأُنثَىٰۤ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 4,
      "text": "إِنَّ سَعۡیَكُمۡ لَشَتَّىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 5,
      "text": "فَأَمَّا مَنۡ أَعۡطَىٰ وَٱتَّقَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 6,
      "text": "وَصَدَّقَ بِٱلۡحُسۡنَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 7,
      "text": "فَسَنُیَسِّرُهُۥ لِلۡیُسۡرَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 8,
      "text": "وَأَمَّا مَنۢ بَخِلَ وَٱسۡتَغۡنَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 9,
      "text": "وَكَذَّبَ بِٱلۡحُسۡنَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 10,
      "text": "فَسَنُیَسِّرُهُۥ لِلۡعُسۡرَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 11,
      "text": "وَمَا یُغۡنِی عَنۡهُ مَالُهُۥۤ إِذَا تَرَدَّىٰۤ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 12,
      "text": "إِنَّ عَلَیۡنَا لَلۡهُدَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 13,
      "text": "وَإِنَّ لَنَا لَلۡـَٔاخِرَةَ وَٱلۡأُولَىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 14,
      "text": "فَأَنذَرۡتُكُمۡ نَارࣰا تَلَظَّىٰ",
      "juz": 30,
      "page": 595
    },
    {
      "number": 15,
      "text": "لَا یَصۡلَىٰهَاۤ إِلَّا ٱلۡأَشۡقَى",
      "juz": 30,
      "page": 596
    },
    {
      "number": 16,
      "text": "ٱلَّذِی كَذَّبَ وَتَوَلَّىٰ",
      "juz": 30,
      "page": 596
    },
    {
      "number": 17,
      "text": "وَسَیُجَنَّبُهَا ٱلۡأَتۡقَى",
      "juz": 30,
      "page": 596
    },
    {
      "number": 18,
      "text": "ٱلَّذِی یُؤۡتِی مَالَهُۥ یَتَزَكَّىٰ",
      "juz": 30,
      "page": 596
    },
    {
      "number": 19,
      "text": "وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعۡمَةࣲ تُجۡزَىٰۤ",
      "juz": 30,
      "page": 596
    },
    {
      "number": 20,
      "text": "إِلَّا ٱبۡتِغَاۤءَ وَجۡهِ رَبِّهِ ٱلۡأَعۡلَىٰ",
      "juz": 30,
      "page": 596
    },
    {
      "number": 21,
      "text": "وَلَسَوۡفَ یَرۡضَىٰ",
      "juz": 30,
      "page": 596
    }
  ]
}