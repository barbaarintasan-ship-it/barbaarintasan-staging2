{
  "number": 70,
  "name": "سُورَةُ المَعَارِجِ",
  "englishName": "Al-Ma'aarij",
  "englishNameTranslation": "The Ascending Stairways",
  "revelationType": "Meccan",
  "numberOfAyahs": 44,
  "ayahs": [
    {
      "number": 1,
      "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ سَأَلَ سَاۤىِٕلُۢ بِعَذَابࣲ وَاقِعࣲ",
      "juz": 29,
      "page": 568
    },
    {
      "number": 2,
      "text": "لِّلۡكَـٰفِرِینَ لَیۡسَ لَهُۥ دَافِعࣱ",
      "juz": 29,
      "page": 568
    },
    {
      "number": 3,
      "text": "مِّنَ ٱللَّهِ ذِی ٱلۡمَعَارِجِ",
      "juz": 29,
      "page": 568
    },
    {
      "number": 4,
      "text": "تَعۡرُجُ ٱلۡمَلَـٰۤىِٕكَةُ وَٱلرُّوحُ إِلَیۡهِ فِی یَوۡمࣲ كَانَ مِقۡدَارُهُۥ خَمۡسِینَ أَلۡفَ سَنَةࣲ",
      "juz": 29,
      "page": 568
    },
    {
      "number": 5,
      "text": "فَٱصۡبِرۡ صَبۡرࣰا جَمِیلًا",
      "juz": 29,
      "page": 568
    },
    {
      "number": 6,
      "text": "إِنَّهُمۡ یَرَوۡنَهُۥ بَعِیدࣰا",
      "juz": 29,
      "page": 568
    },
    {
      "number": 7,
      "text": "وَنَرَىٰهُ قَرِیبࣰا",
      "juz": 29,
      "page": 568
    },
    {
      "number": 8,
      "text": "یَوۡمَ تَكُونُ ٱلسَّمَاۤءُ كَٱلۡمُهۡلِ",
      "juz": 29,
      "page": 568
    },
    {
      "number": 9,
      "text": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ",
      "juz": 29,
      "page": 568
    },
    {
      "number": 10,
      "text": "وَلَا یَسۡـَٔلُ حَمِیمٌ حَمِیمࣰا",
      "juz": 29,
      "page": 568
    },
    {
      "number": 11,
      "text": "یُبَصَّرُونَهُمۡۚ یَوَدُّ ٱلۡمُجۡرِمُ لَوۡ یَفۡتَدِی مِنۡ عَذَابِ یَوۡمِىِٕذِۭ بِبَنِیهِ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 12,
      "text": "وَصَـٰحِبَتِهِۦ وَأَخِیهِ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 13,
      "text": "وَفَصِیلَتِهِ ٱلَّتِی تُـٔۡوِیهِ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 14,
      "text": "وَمَن فِی ٱلۡأَرۡضِ جَمِیعࣰا ثُمَّ یُنجِیهِ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 15,
      "text": "كَلَّاۤۖ إِنَّهَا لَظَىٰ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 16,
      "text": "نَزَّاعَةࣰ لِّلشَّوَىٰ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 17,
      "text": "تَدۡعُوا۟ مَنۡ أَدۡبَرَ وَتَوَلَّىٰ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 18,
      "text": "وَجَمَعَ فَأَوۡعَىٰۤ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 19,
      "text": "۞ إِنَّ ٱلۡإِنسَـٰنَ خُلِقَ هَلُوعًا",
      "juz": 29,
      "page": 569
    },
    {
      "number": 20,
      "text": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعࣰا",
      "juz": 29,
      "page": 569
    },
    {
      "number": 21,
      "text": "وَإِذَا مَسَّهُ ٱلۡخَیۡرُ مَنُوعًا",
      "juz": 29,
      "page": 569
    },
    {
      "number": 22,
      "text": "إِلَّا ٱلۡمُصَلِّینَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 23,
      "text": "ٱلَّذِینَ هُمۡ عَلَىٰ صَلَاتِهِمۡ دَاۤىِٕمُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 24,
      "text": "وَٱلَّذِینَ فِیۤ أَمۡوَ ٰ⁠لِهِمۡ حَقࣱّ مَّعۡلُومࣱ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 25,
      "text": "لِّلسَّاۤىِٕلِ وَٱلۡمَحۡرُومِ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 26,
      "text": "وَٱلَّذِینَ یُصَدِّقُونَ بِیَوۡمِ ٱلدِّینِ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 27,
      "text": "وَٱلَّذِینَ هُم مِّنۡ عَذَابِ رَبِّهِم مُّشۡفِقُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 28,
      "text": "إِنَّ عَذَابَ رَبِّهِمۡ غَیۡرُ مَأۡمُونࣲ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 29,
      "text": "وَٱلَّذِینَ هُمۡ لِفُرُوجِهِمۡ حَـٰفِظُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 30,
      "text": "إِلَّا عَلَىٰۤ أَزۡوَ ٰ⁠جِهِمۡ أَوۡ مَا مَلَكَتۡ أَیۡمَـٰنُهُمۡ فَإِنَّهُمۡ غَیۡرُ مَلُومِینَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 31,
      "text": "فَمَنِ ٱبۡتَغَىٰ وَرَاۤءَ ذَ ٰ⁠لِكَ فَأُو۟لَـٰۤىِٕكَ هُمُ ٱلۡعَادُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 32,
      "text": "وَٱلَّذِینَ هُمۡ لِأَمَـٰنَـٰتِهِمۡ وَعَهۡدِهِمۡ رَ ٰ⁠عُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 33,
      "text": "وَٱلَّذِینَ هُم بِشَهَـٰدَ ٰ⁠تِهِمۡ قَاۤىِٕمُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 34,
      "text": "وَٱلَّذِینَ هُمۡ عَلَىٰ صَلَاتِهِمۡ یُحَافِظُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 35,
      "text": "أُو۟لَـٰۤىِٕكَ فِی جَنَّـٰتࣲ مُّكۡرَمُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 36,
      "text": "فَمَالِ ٱلَّذِینَ كَفَرُوا۟ قِبَلَكَ مُهۡطِعِینَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 37,
      "text": "عَنِ ٱلۡیَمِینِ وَعَنِ ٱلشِّمَالِ عِزِینَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 38,
      "text": "أَیَطۡمَعُ كُلُّ ٱمۡرِئࣲ مِّنۡهُمۡ أَن یُدۡخَلَ جَنَّةَ نَعِیمࣲ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 39,
      "text": "كَلَّاۤۖ إِنَّا خَلَقۡنَـٰهُم مِّمَّا یَعۡلَمُونَ",
      "juz": 29,
      "page": 569
    },
    {
      "number": 40,
      "text": "فَلَاۤ أُقۡسِمُ بِرَبِّ ٱلۡمَشَـٰرِقِ وَٱلۡمَغَـٰرِبِ إِنَّا لَقَـٰدِرُونَ",
      "juz": 29,
      "page": 570
    },
    {
      "number": 41,
      "text": "عَلَىٰۤ أَن نُّبَدِّلَ خَیۡرࣰا مِّنۡهُمۡ وَمَا نَحۡنُ بِمَسۡبُوقِینَ",
      "juz": 29,
      "page": 570
    },
    {
      "number": 42,
      "text": "فَذَرۡهُمۡ یَخُوضُوا۟ وَیَلۡعَبُوا۟ حَتَّىٰ یُلَـٰقُوا۟ یَوۡمَهُمُ ٱلَّذِی یُوعَدُونَ",
      "juz": 29,
      "page": 570
    },
    {
      "number": 43,
      "text": "یَوۡمَ یَخۡرُجُونَ مِنَ ٱلۡأَجۡدَاثِ سِرَاعࣰا كَأَنَّهُمۡ إِلَىٰ نُصُبࣲ یُوفِضُونَ",
      "juz": 29,
      "page": 570
    },
    {
      "number": 44,
      "text": "خَـٰشِعَةً أَبۡصَـٰرُهُمۡ تَرۡهَقُهُمۡ ذِلَّةࣱۚ ذَ ٰ⁠لِكَ ٱلۡیَوۡمُ ٱلَّذِی كَانُوا۟ یُوعَدُونَ",
      "juz": 29,
      "page": 570
    }
  ]
}