{
  "number": 68,
  "name": "سُورَةُ القَلَمِ",
  "englishName": "Al-Qalam",
  "englishNameTranslation": "The Pen",
  "revelationType": "Meccan",
  "numberOfAyahs": 52,
  "ayahs": [
    {
      "number": 1,
      "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ نۤۚ وَٱلۡقَلَمِ وَمَا یَسۡطُرُونَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 2,
      "text": "مَاۤ أَنتَ بِنِعۡمَةِ رَبِّكَ بِمَجۡنُونࣲ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 3,
      "text": "وَإِنَّ لَكَ لَأَجۡرًا غَیۡرَ مَمۡنُونࣲ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 4,
      "text": "وَإِنَّكَ لَعَلَىٰ خُلُقٍ عَظِیمࣲ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 5,
      "text": "فَسَتُبۡصِرُ وَیُبۡصِرُونَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 6,
      "text": "بِأَییِّكُمُ ٱلۡمَفۡتُونُ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 7,
      "text": "إِنَّ رَبَّكَ هُوَ أَعۡلَمُ بِمَن ضَلَّ عَن سَبِیلِهِۦ وَهُوَ أَعۡلَمُ بِٱلۡمُهۡتَدِینَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 8,
      "text": "فَلَا تُطِعِ ٱلۡمُكَذِّبِینَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 9,
      "text": "وَدُّوا۟ لَوۡ تُدۡهِنُ فَیُدۡهِنُونَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 10,
      "text": "وَلَا تُطِعۡ كُلَّ حَلَّافࣲ مَّهِینٍ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 11,
      "text": "هَمَّازࣲ مَّشَّاۤءِۭ بِنَمِیمࣲ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 12,
      "text": "مَّنَّاعࣲ لِّلۡخَیۡرِ مُعۡتَدٍ أَثِیمٍ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 13,
      "text": "عُتُلِّۭ بَعۡدَ ذَ ٰ⁠لِكَ زَنِیمٍ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 14,
      "text": "أَن كَانَ ذَا مَالࣲ وَبَنِینَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 15,
      "text": "إِذَا تُتۡلَىٰ عَلَیۡهِ ءَایَـٰتُنَا قَالَ أَسَـٰطِیرُ ٱلۡأَوَّلِینَ",
      "juz": 29,
      "page": 564
    },
    {
      "number": 16,
      "text": "سَنَسِمُهُۥ عَلَى ٱلۡخُرۡطُومِ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 17,
      "text": "إِنَّا بَلَوۡنَـٰهُمۡ كَمَا بَلَوۡنَاۤ أَصۡحَـٰبَ ٱلۡجَنَّةِ إِذۡ أَقۡسَمُوا۟ لَیَصۡرِمُنَّهَا مُصۡبِحِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 18,
      "text": "وَلَا یَسۡتَثۡنُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 19,
      "text": "فَطَافَ عَلَیۡهَا طَاۤىِٕفࣱ مِّن رَّبِّكَ وَهُمۡ نَاۤىِٕمُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 20,
      "text": "فَأَصۡبَحَتۡ كَٱلصَّرِیمِ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 21,
      "text": "فَتَنَادَوۡا۟ مُصۡبِحِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 22,
      "text": "أَنِ ٱغۡدُوا۟ عَلَىٰ حَرۡثِكُمۡ إِن كُنتُمۡ صَـٰرِمِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 23,
      "text": "فَٱنطَلَقُوا۟ وَهُمۡ یَتَخَـٰفَتُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 24,
      "text": "أَن لَّا یَدۡخُلَنَّهَا ٱلۡیَوۡمَ عَلَیۡكُم مِّسۡكِینࣱ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 25,
      "text": "وَغَدَوۡا۟ عَلَىٰ حَرۡدࣲ قَـٰدِرِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 26,
      "text": "فَلَمَّا رَأَوۡهَا قَالُوۤا۟ إِنَّا لَضَاۤلُّونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 27,
      "text": "بَلۡ نَحۡنُ مَحۡرُومُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 28,
      "text": "قَالَ أَوۡسَطُهُمۡ أَلَمۡ أَقُل لَّكُمۡ لَوۡلَا تُسَبِّحُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 29,
      "text": "قَالُوا۟ سُبۡحَـٰنَ رَبِّنَاۤ إِنَّا كُنَّا ظَـٰلِمِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 30,
      "text": "فَأَقۡبَلَ بَعۡضُهُمۡ عَلَىٰ بَعۡضࣲ یَتَلَـٰوَمُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 31,
      "text": "قَالُوا۟ یَـٰوَیۡلَنَاۤ إِنَّا كُنَّا طَـٰغِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 32,
      "text": "عَسَىٰ رَبُّنَاۤ أَن یُبۡدِلَنَا خَیۡرࣰا مِّنۡهَاۤ إِنَّاۤ إِلَىٰ رَبِّنَا رَ ٰ⁠غِبُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 33,
      "text": "كَذَ ٰ⁠لِكَ ٱلۡعَذَابُۖ وَلَعَذَابُ ٱلۡـَٔاخِرَةِ أَكۡبَرُۚ لَوۡ كَانُوا۟ یَعۡلَمُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 34,
      "text": "إِنَّ لِلۡمُتَّقِینَ عِندَ رَبِّهِمۡ جَنَّـٰتِ ٱلنَّعِیمِ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 35,
      "text": "أَفَنَجۡعَلُ ٱلۡمُسۡلِمِینَ كَٱلۡمُجۡرِمِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 36,
      "text": "مَا لَكُمۡ كَیۡفَ تَحۡكُمُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 37,
      "text": "أَمۡ لَكُمۡ كِتَـٰبࣱ فِیهِ تَدۡرُسُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 38,
      "text": "إِنَّ لَكُمۡ فِیهِ لَمَا تَخَیَّرُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 39,
      "text": "أَمۡ لَكُمۡ أَیۡمَـٰنٌ عَلَیۡنَا بَـٰلِغَةٌ إِلَىٰ یَوۡمِ ٱلۡقِیَـٰمَةِ إِنَّ لَكُمۡ لَمَا تَحۡكُمُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 40,
      "text": "سَلۡهُمۡ أَیُّهُم بِذَ ٰ⁠لِكَ زَعِیمٌ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 41,
      "text": "أَمۡ لَهُمۡ شُرَكَاۤءُ فَلۡیَأۡتُوا۟ بِشُرَكَاۤىِٕهِمۡ إِن كَانُوا۟ صَـٰدِقِینَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 42,
      "text": "یَوۡمَ یُكۡشَفُ عَن سَاقࣲ وَیُدۡعَوۡنَ إِلَى ٱلسُّجُودِ فَلَا یَسۡتَطِیعُونَ",
      "juz": 29,
      "page": 565
    },
    {
      "number": 43,
      "text": "خَـٰشِعَةً أَبۡصَـٰرُهُمۡ تَرۡهَقُهُمۡ ذِلَّةࣱۖ وَقَدۡ كَانُوا۟ یُدۡعَوۡنَ إِلَى ٱلسُّجُودِ وَهُمۡ سَـٰلِمُونَ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 44,
      "text": "فَذَرۡنِی وَمَن یُكَذِّبُ بِهَـٰذَا ٱلۡحَدِیثِۖ سَنَسۡتَدۡرِجُهُم مِّنۡ حَیۡثُ لَا یَعۡلَمُونَ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 45,
      "text": "وَأُمۡلِی لَهُمۡۚ إِنَّ كَیۡدِی مَتِینٌ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 46,
      "text": "أَمۡ تَسۡـَٔلُهُمۡ أَجۡرࣰا فَهُم مِّن مَّغۡرَمࣲ مُّثۡقَلُونَ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 47,
      "text": "أَمۡ عِندَهُمُ ٱلۡغَیۡبُ فَهُمۡ یَكۡتُبُونَ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 48,
      "text": "فَٱصۡبِرۡ لِحُكۡمِ رَبِّكَ وَلَا تَكُن كَصَاحِبِ ٱلۡحُوتِ إِذۡ نَادَىٰ وَهُوَ مَكۡظُومࣱ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 49,
      "text": "لَّوۡلَاۤ أَن تَدَ ٰ⁠رَكَهُۥ نِعۡمَةࣱ مِّن رَّبِّهِۦ لَنُبِذَ بِٱلۡعَرَاۤءِ وَهُوَ مَذۡمُومࣱ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 50,
      "text": "فَٱجۡتَبَـٰهُ رَبُّهُۥ فَجَعَلَهُۥ مِنَ ٱلصَّـٰلِحِینَ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 51,
      "text": "وَإِن یَكَادُ ٱلَّذِینَ كَفَرُوا۟ لَیُزۡلِقُونَكَ بِأَبۡصَـٰرِهِمۡ لَمَّا سَمِعُوا۟ ٱلذِّكۡرَ وَیَقُولُونَ إِنَّهُۥ لَمَجۡنُونࣱ",
      "juz": 29,
      "page": 566
    },
    {
      "number": 52,
      "text": "وَمَا هُوَ إِلَّا ذِكۡرࣱ لِّلۡعَـٰلَمِینَ",
      "juz": 29,
      "page": 566
    }
  ]
}