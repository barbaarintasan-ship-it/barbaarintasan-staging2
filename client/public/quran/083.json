{
  "number": 83,
  "name": "سُورَةُ المُطَفِّفِينَ",
  "englishName": "Al-Mutaffifin",
  "englishNameTranslation": "Defrauding",
  "revelationType": "Meccan",
  "numberOfAyahs": 36,
  "ayahs": [
    {
      "number": 1,
      "text": "بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ وَیۡلࣱ لِّلۡمُطَفِّفِینَ",
      "juz": 30,
      "page": 587
    },
    {
      "number": 2,
      "text": "ٱلَّذِینَ إِذَا ٱكۡتَالُوا۟ عَلَى ٱلنَّاسِ یَسۡتَوۡفُونَ",
      "juz": 30,
      "page": 587
    },
    {
      "number": 3,
      "text": "وَإِذَا كَالُوهُمۡ أَو وَّزَنُوهُمۡ یُخۡسِرُونَ",
      "juz": 30,
      "page": 587
    },
    {
      "number": 4,
      "text": "أَلَا یَظُنُّ أُو۟لَـٰۤىِٕكَ أَنَّهُم مَّبۡعُوثُونَ",
      "juz": 30,
      "page": 587
    },
    {
      "number": 5,
      "text": "لِیَوۡمٍ عَظِیمࣲ",
      "juz": 30,
      "page": 587
    },
    {
      "number": 6,
      "text": "یَوۡمَ یَقُومُ ٱلنَّاسُ لِرَبِّ ٱلۡعَـٰلَمِینَ",
      "juz": 30,
      "page": 587
    },
    {
      "number": 7,
      "text": "كَلَّاۤ إِنَّ كِتَـٰبَ ٱلۡفُجَّارِ لَفِی سِجِّینࣲ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 8,
      "text": "وَمَاۤ أَدۡرَىٰكَ مَا سِجِّینࣱ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 9,
      "text": "كِتَـٰبࣱ مَّرۡقُومࣱ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 10,
      "text": "وَیۡلࣱ یَوۡمَىِٕذࣲ لِّلۡمُكَذِّبِینَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 11,
      "text": "ٱلَّذِینَ یُكَذِّبُونَ بِیَوۡمِ ٱلدِّینِ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 12,
      "text": "وَمَا یُكَذِّبُ بِهِۦۤ إِلَّا كُلُّ مُعۡتَدٍ أَثِیمٍ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 13,
      "text": "إِذَا تُتۡلَىٰ عَلَیۡهِ ءَایَـٰتُنَا قَالَ أَسَـٰطِیرُ ٱلۡأَوَّلِینَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 14,
      "text": "كَلَّاۖ بَلۡۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ یَكۡسِبُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 15,
      "text": "كَلَّاۤ إِنَّهُمۡ عَن رَّبِّهِمۡ یَوۡمَىِٕذࣲ لَّمَحۡجُوبُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 16,
      "text": "ثُمَّ إِنَّهُمۡ لَصَالُوا۟ ٱلۡجَحِیمِ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 17,
      "text": "ثُمَّ یُقَالُ هَـٰذَا ٱلَّذِی كُنتُم بِهِۦ تُكَذِّبُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 18,
      "text": "كَلَّاۤ إِنَّ كِتَـٰبَ ٱلۡأَبۡرَارِ لَفِی عِلِّیِّینَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 19,
      "text": "وَمَاۤ أَدۡرَىٰكَ مَا عِلِّیُّونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 20,
      "text": "كِتَـٰبࣱ مَّرۡقُومࣱ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 21,
      "text": "یَشۡهَدُهُ ٱلۡمُقَرَّبُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 22,
      "text": "إِنَّ ٱلۡأَبۡرَارَ لَفِی نَعِیمٍ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 23,
      "text": "عَلَى ٱلۡأَرَاۤىِٕكِ یَنظُرُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 24,
      "text": "تَعۡرِفُ فِی وُجُوهِهِمۡ نَضۡرَةَ ٱلنَّعِیمِ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 25,
      "text": "یُسۡقَوۡنَ مِن رَّحِیقࣲ مَّخۡتُومٍ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 26,
      "text": "خِتَـٰمُهُۥ مِسۡكࣱۚ وَفِی ذَ ٰ⁠لِكَ فَلۡیَتَنَافَسِ ٱلۡمُتَنَـٰفِسُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 27,
      "text": "وَمِزَاجُهُۥ مِن تَسۡنِیمٍ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 28,
      "text": "عَیۡنࣰا یَشۡرَبُ بِهَا ٱلۡمُقَرَّبُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 29,
      "text": "إِنَّ ٱلَّذِینَ أَجۡرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِینَ ءَامَنُوا۟ یَضۡحَكُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 30,
      "text": "وَإِذَا مَرُّوا۟ بِهِمۡ یَتَغَامَزُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 31,
      "text": "وَإِذَا ٱنقَلَبُوۤا۟ إِلَىٰۤ أَهۡلِهِمُ ٱنقَلَبُوا۟ فَكِهِینَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 32,
      "text": "وَإِذَا رَأَوۡهُمۡ قَالُوۤا۟ إِنَّ هَـٰۤؤُلَاۤءِ لَضَاۤلُّونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 33,
      "text": "وَمَاۤ أُرۡسِلُوا۟ عَلَیۡهِمۡ حَـٰفِظِینَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 34,
      "text": "فَٱلۡیَوۡمَ ٱلَّذِینَ ءَامَنُوا۟ مِنَ ٱلۡكُفَّارِ یَضۡحَكُونَ",
      "juz": 30,
      "page": 588
    },
    {
      "number": 35,
      "text": "عَلَى ٱلۡأَرَاۤىِٕكِ یَنظُرُونَ",
      "juz": 30,
      "page": 589
    },
    {
      "number": 36,
      "text": "هَلۡ ثُوِّبَ ٱلۡكُفَّارُ مَا كَانُوا۟ یَفۡعَلُونَ",
      "juz": 30,
      "page": 589
    }
  ]
}